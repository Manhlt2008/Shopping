@using WebApplication.Models.Category
@using WebApplication.Models.User;
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/Shop/_ShopLayout.cshtml";
    var categoryModels = (List<CategoryManageList>)ViewBag.Categories;

}

@section MenuSection
{
    @Html.Partial("../Home/IndexPartialPage/MenuPartial")
}

@section CategoryColumn
{
    @Html.Partial("../Home/IndexPartialPage/CategoryListPartial", categoryModels)
}

<div id="content" class="col-sm-9">
    <ul class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Tài khoản</a></li>
        <li><a href="@Url.Action("ForgotPassword","Authentication")">Quên mật khẩu</a></li>
    </ul>
    <h1>Bạn đã quên mật khẩu?</h1>
    <p>Nhập đỉa chỉ E-Mail tài khoản của bạn. Chọn "Tiếp tục" để mật khẩu sẽ được gửi vào E-mail của bạn.</p>
        <fieldset>
            <legend>Địa chỉ E-Mail của bạn</legend>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-email">Địa chỉ E-Mail</label>
                <div class="col-sm-10">
                    <input type="email" name="email" value="" placeholder="Địa chỉ E-Mail" id="input-email" class="form-control">
                </div>
            </div>
        </fieldset>
        <div class="buttons clearfix">
            <div class="pull-left"><a href="@Url.Action("Login", "Authentication")" class="btn btn-default">Quay lại</a></div>
            <div class="pull-right">
                <input type="button" value="Tiếp tục" class="btn btn-primary" onclick="ForgotPassword()">
            </div>
        </div>
</div>
<!-- Modal -->
<div id="success-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gửi yêu cầu quên mật khẩu</h4>
            </div>
            <div class="modal-body">
                <p>Bạn đã gửi yêu cầu quên mật khẩu thành công</p>
                <p>Email có hiệu lực trong vòng 24h.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="window.location.replace('/');">Close</button>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/MainShop/Authentication/AuthenticationController.js"></script>
