@using WebApplication.Lib.Bll.Lang
@using WebApplication.Lib.Bll.SystemSetting
@{
    Layout = "~/Views/Shared/ShopMain/_ShopMainLayout.cshtml";

    var lang = new LangValue(LangValue.LangEnum.Vi, LangValue.DictionaryEnum.CmsAuthenticationForgotPassword);
    var masterpageLang = new LangValue(LangValue.LangEnum.Vi, LangValue.DictionaryEnum.MasterPage);

    ViewBag.Title = ViewTitleBll.Title(lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.Title));
}
<div class="b-inner-page-header f-inner-page-header b-bg-header-inner-page">
    <div class="b-inner-page-header__content">
        <div class="container">
            <h1 class="f-primary-l c-default">@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.Title)</h1>
        </div>
    </div>
</div>
<div class="l-main-container">
    <div class="b-breadcrumbs f-breadcrumbs">
        <div class="container">
            <ul>
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>@masterpageLang.GetValue(LangValue.MasterPage.Menu.Home)</a></li>
                <li><i class="fa fa-angle-right"></i><span> @lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.Title)</span></li>
            </ul>
        </div>
    </div>
    <div class="container b-forgot-password-page">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div class="b-forgot-password-form">
                    <h3 class="f-primary-l is-global-title">@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.Title)</h3>
                    <p>
                        @lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.Description)
                    </p>
                    <div class="b-form-row b-form-inline b-form-horizontal b-form-password">
                        <div class="b-form-row">
                            <div class="b-form-horizontal--mail f-form-horizontal--mail">
                                <i class="fa fa-envelope"></i>
                                <input type="text" id="input-email" class="form-control" placeholder="Email" />
                            </div>
                        </div>
                        <div class="b-form-row">
                            <div>
                                <a href="javascript:void(0);" class="b-btn f-btn button-sm b-btn-default f-primary-b b-btn__w100" onclick="ForgotPassword()">@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.SendMeNow)</a>
                            </div>
                        </div>
                        <div class="b-form-row">
                            <div class="b-form-horizontal--mail">
                                <a href="@Url.Action("Index", "ContactUs")" class="f-link--color">@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.ContactOnlineSupport)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div id="success-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.ModalTitle)</h4>
            </div>
            <div class="modal-body">
                @Html.Raw(@lang.GetValue(LangValue.CmsAuthentication.ForgotPassword.ModalBody))
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="window.location.replace('@Url.Action("Index", "Home")');">OK</button>
            </div>
        </div>
    </div>
</div>