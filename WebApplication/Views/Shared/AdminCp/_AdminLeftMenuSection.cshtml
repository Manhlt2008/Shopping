                        <li><a href="@Url.Action("TransactionHistoryForAdmin", "Transaction")">Lịch Sử Giao Dịch</a></li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0)"><span class="li_cup"></span>Deal To Day</a>
                    <ul>
                        <li><a href="@Url.Action("Index", "DealToDay")">Deal To Day</a></li>
                    </ul>
                </li>
            }
            else
            {
                if (userModel.RoleId.Equals(RoleEnum.SupplierManager) ||
                                                     userModel.RoleId.Equals(RoleEnum.SupplierEmployee))
                {
                    <li>
                        <a href="javascript:void(0)"><span class="li_shop"></span>Nhà Cung Cấp</a>
                        <ul>
                            <li><a href="@Url.Action("Manage", "Supplier")">Quản Lý</a></li>
                        </ul>
                    </li>
                }
            }
        </ul>
    </div>
</nav>

<script>
    $(document).ready(function () {
        $("#text_nav_side_fixed a").each(function () {
            if ($(this).attr("href") == window.location.pathname) {
                $(this).parent().addClass("active");
            }
        })
    })
</script>