                    <ul>
                        <li><a href="@Url.Action("ManageAccount", "Admin")">Quản Lý</a></li>
                    </ul>
                </li>

                <li>
                    <a href="javascript:void(0)"><span class="icon-th-list"></span>Quản lý Loại SP</a>
                    <ul>
                        <li><a href="@Url.Action("Manage", "Category")">Quản Lý</a></li>
                        <li><a href="@Url.Action("Create", "Category")">Tạo Mới</a></li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0)"><span class="li_t-shirt"></span>Sản Phẩm</a>

                    <ul>
                        <li><a href="@Url.Action("Manage", "Product")">Quản Lý</a></li>
