                <li>
                    <a href="javascript:void(0)"><span class="li_shop"></span>Nhà Cung Cấp</a>
                    <ul>
                        <li><a href="@Url.Action("Manage", "Supplier")">Quản Lý</a></li>
                        <li><a href="@Url.Action("Create", "Supplier")">Tạo Mới</a></li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0)"><span class="glyphicon glyphicon-shopping-cart"></span>Đơn Hàng</a>
                    <ul>
                        <li><a href="@Url.Action("Manage", "Order")">Quản Lí</a></li>
                        <li><a href="@Url.Action("Create", "Order")">Tạo Mới</a></li>
                    </ul>
                </li>
                <li>
                    <a href="javascript:void(0)"><span class="li_note"></span> Đánh Giá</a>
                    <ul>
                        <li><a href="@Url.Action("Manage", "Review")">Quản Lý</a></li>
                    </ul>
                </li>
